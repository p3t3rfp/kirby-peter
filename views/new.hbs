<div class="container">
  <a href="/{{linkId}}">Back</a>
  <h2>New link{{title}}</h2>
  <div class="col-8">
    <form action="/" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="title" value="{{title}}">
      </div>
      <div class="form-group">
        <label for="url">URL</label>
        <input class="form-control" type="text" name="url" id="url" value={{url}}>
      </div>
      <div class="form-group">
        <label for="Date">Date</label>
        <input class="form-control" type="date" name="Date" id="Date" value="{{Date}}">
      </div>
      <div class="form-group">
        <label for="desc">Description</label>
        <textarea class="form-control" name="desc">
          {{desc}}
        </textarea>
      </div>
      <input class="btn btn-info" type="submit" value="POST">
    </form>
  </div>
</div>